@{
    ViewBag.Title = "Sistema de turnos";
}
<link href="~/Content/Carousel.css" rel="stylesheet" />

<div id="carouselPrincipal" class="carousel slide" data-ride="carousel" data-interval="3000">
    <ol class="carousel-indicators">
        <li data-target="#carouselPrincipal" data-slide-to="0" class="active"></li>
        <li data-target="#carouselPrincipal" data-slide-to="1"></li>
        <li data-target="#carouselPrincipal" data-slide-to="2"></li>
        <li data-target="#carouselPrincipal" data-slide-to="3"></li>
        <li data-target="#carouselPrincipal" data-slide-to="4"></li>
        <li data-target="#carouselPrincipal" data-slide-to="5"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/fonts/Profesionales.jpg" alt="Nuestros profesionales">
            <div class="carousel-caption d-none d-md-block">
                @Html.Partial("_ButtonCarrousel")
                <h5>Nuestros profesionales</h5>
                <p>Contamos con un grupo de profesionales especializados para ayudarte</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/fonts/EstamosParaCuidarte.jpg" alt="Estamos para cuidarte">
            <div class="carousel-caption d-none d-md-block">
                @Html.Partial("_ButtonCarrousel")
                <h5>Estamos para cuidarte</h5>
                <p>Contamos con equipos de última tecnología para un mejor resultado de tus estudios</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/fonts/Consultorio1.jpg" alt="Nuestros consultorios">

            <div class="carousel-caption d-none d-md-block">
                @Html.Partial("_ButtonCarrousel")
                <h5>Nuestros consultorios</h5>
                <p>Contamos con consultorios amplios, modernos y totalmente equipados para vos</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/fonts/Recepcion.jpg" alt="Atención a nuestros pacientes">
            <div class="carousel-caption d-none d-md-block">
                @Html.Partial("_ButtonCarrousel")
                <h5>Atención a nuestros pacientes</h5>
                <p>Contamos con un personal administrativo que esta preparado para ayudarte</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/fonts/SalaDeEspera.jpg" alt="Tu espera mucho más cómoda">
            <div class="carousel-caption d-none d-md-block">
                @Html.Partial("_ButtonCarrousel")
                <h5>Tu espera mucho más cómoda</h5>
                <p>Nuestra sala de espera cuanta con lo necesario para que te sientas como en tu casa</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/fonts/ObrasSociales.jpg" alt="Obras sociales y prepagas">
            <div class="carousel-caption d-none d-md-block">
                @Html.Partial("_ButtonCarrousel")
                <h5>Obras sociales y prepagas</h5>
                <p>Atendemos estas y muchas mas obras sociales y prepagas, consulte para más información!</p>
            </div>
        </div>
    </div>
</div>

<div class="row inicio">
    <div class="col-md-4 bordeInicio">
        <h2>¿Quiénes somos?</h2>
        <p>
            <span style="font-weight:bold;">Clinica Alejandria, </span>
            es una institución privada especializada en servicios de cuidado y atencion en maternidad y patologías clínico-quirúrgicas prevalentes.
        </p>
    </div>
    <div class="col-md-4 bordeInicio">
        <h2>Nuestros servicios</h2>
        <p>Ofrecemos distintos servicios, consultas generales, estudios, con equipos de última tecnología especializados para obtener un mejor diagnostico para nuestros pacientes.</p>
    </div>
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-5">
                <img src="~/fonts/mapMaker.png" />
            </div>
            <div class="col-md-7">
                <p style="font-weight:bold; margin-bottom:0.5em;">
                    SEDE CENTRAL
                </p>
                <p style="font-weight:100; margin-bottom:0.5em;">
                    Av. 9 de Julio 2409, CABA, Provincia de Bs. As.
                </p>
                <p style="font-weight:bold; font-size:20px;">
                    (011) 15 66234589
                </p>
            </div>
        </div>
        <p><a href="mailto:atencion.clientes@clinicalejandria.com.ar">atencion.clientes@clinicalejandria.com.ar</a></p>
    </div>
</div>

@Html.Partial("_NosMudamos")

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            // Handler for .ready() called.
            $("#nosMudamos").modal('show');
        });
    </script>
}
