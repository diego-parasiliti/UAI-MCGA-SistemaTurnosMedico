@{
    ViewBag.Title = "Contacto";
    ViewBag.Description = "En esta página vamos a poder ver la información de como contactarse con la empresa.";
    ViewBag.Author = Application.Name;
    ViewBag.ReferrerMode = ReferrerMode.OriginWhenCrossOrigin;
    ViewBag.TwitterCard = new SummaryLargeImageTwitterCard("@TwitterCard");
    ViewBag.OpenGraph = new OpenGraphBusiness(
        ViewBag.Title,
        new OpenGraphImage(Url.AbsoluteContent("~/fonts/icons/open-graph-1200x630.png")) { Height = 630, Type = ContentType.Png, Width = 1200 },
        new OpenGraphContactData(Application.StreetAddress, Application.Locality, Application.PostalCode, Application.Country)
        {
            Email = Application.Email,
            Phone = Application.Phone,
            Website = Url.AbsoluteRouteUrl(HomeControllerRoute.GetContact)
        },
        new OpenGraphLocation(Application.Latitude, Application.Longitude))
    {
        Determiner = OpenGraphDeterminer.Blank,
        SiteName = Application.Name
    };
}

<div class="row inicio">
    <div class="col-lg-8 col-md-12 col-sm-12 text-justify">
        <h2>@ViewBag.Title</h2>
        <p>
            <span style="font-weight:bold;">Clinica Alejandria, </span>
            cuenta con una sola sede central, a continuación dejamos los datos para que pueda encontrarnos y contactarse con nosotros.
        </p>
        <p style="font-weight:bold; margin-bottom:0.5em;">
            SEDE CENTRAL
        </p>
        <p style="font-weight:100; margin-bottom:0.5em;">
            Av. 9 de Julio 2409, CABA, Provincia de Bs. As.
        </p>
        <p style="font-weight:bold; font-size:20px;margin-bottom:0.5em;">
            (011) 15 66234589
        </p>
        <p style="font-size:20px;"><a href="mailto:atencion.clientes@clinicalejandria.com.ar">atencion.clientes@clinicalejandria.com.ar</a></p>
    </div>
    <div class="col-lg-4 col-md-12 col-sm-12 text-center">
        <img src="~/fonts/map.png" style="height:100%;" />
    </div>
</div>